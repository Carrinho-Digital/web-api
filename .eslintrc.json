{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "rules": {
    "no-console": "error",
    "indent": [2, 2],
    "arrow-parens": "off",
    "new-cap": "off",
    "require-jsdoc": "off",
    "object-curly-spacing": "off",
    "class-methods-use-this": "off",
    "no-invalid-this": "off"
  }
}
